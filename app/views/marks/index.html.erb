<p id="notice"><%= notice %></p>

<h1>Marks</h1>

<div id="createData"></div>
<br>
<%= link_to 'New Mark', new_mark_path, remote: true,class:'btn btn-primary mt-3 mb-3' %>
<br>
<table class="table table-hover">
  <thead class="text-center">
    <tr>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Mark/Url</th>
      <th>Type</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody id="data">
    <%= render('marks/data') %>
  </tbody>
</table>

<div>
<%= pie_chart Type.group(:name).count,donut: true, library: {pieSliceText: "value", backgroundColor: "none", pieHole: 0.4, legend: {position: "none"}, slices: [{color: '#c7232a'}, {color: '#f15b28'}, {color: '#d7b920'}, {color: '#89cadc'}, {color: '#38b449'}, {color: '#561871'}, {color: '#337198'}]}  %>
</div>

